---
import Chevron from '../icons/Chevron.astro';
import External from '../icons/External.astro';
import Github from '../icons/Github.astro';
import Email from '../icons/Email.astro';
import Youtube from '../icons/Youtube.astro';
import Twitter from '../icons/Twitter.astro';
import CSS from '../icons/CSS.astro';
import Typescript from '../icons/Typescript.astro';
import Repository from '../icons/Repository.astro';
import Sun from '../icons/Sun.astro';
import Moon from '../icons/Moon.astro';
import Javascript from '../icons/Javascript.astro';
import Linkedin from '../icons/Github.astro';

const { name } = Astro.props;
---

<>
  {
    (() => {
      switch (name) {
        case "chevron":
          return <Chevron {...Astro.props} />;
        case "external":
          return <External {...Astro.props} />;
        case "twitter":
          return <Twitter {...Astro.props} />;
        case "email":
          return <Email {...Astro.props} />;
        case "youtube":
          return <Youtube {...Astro.props} />;
        case "github":
          return <Github {...Astro.props} />;
        case "linkedin":
          return <Linkedin {...Astro.props} />;
        case "css":
          return <CSS {...Astro.props} />;
        case "typescript":
          return <Typescript {...Astro.props} />;
        case "repository":
          return <Repository {...Astro.props} />;
        case "sun":
          return <Sun {...Astro.props} />;
        case "moon":
          return <Moon {...Astro.props} />;
        case "javascript":
          return <Javascript {...Astro.props} />;

        default:
          return <div>Icon not found</div>;
      }
    })()
  }
</>
