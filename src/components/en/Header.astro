---
import ThemeControl from "../ThemeControl.astro";
---
<header
  class={`
    flex justify-center items-center
    mx-auto
    py-5
    sticky top-0
    w-full xl:w-[1120px]
    z-10
  `}
>
  <nav
    class={`
      border border-black rounded-full
      px-3 py-1
      flex flex-row items-center
      bg-neutral-200 dark:bg-black/50
      backdrop-blur-2xl
    `}
  >

  <a class="hover:bg-white/10 rounded-full px-3 transition" href="#about"
  >About me</a>
  <a class="hover:bg-white/10 rounded-full px-3 transition" href="#educacion"
  >Education</a
>
    <a
      class="hover:bg-white/10 rounded-full px-3 transition"
      href="#experiencia">Experience</a
    >
    <a class="hover:bg-white/10 rounded-full px-3 transition" href="#projects"
      >Projects</a
    >
    <select id="lang" class="hover:bg-black/10 rounded-full px-3 transition bg-black text-white" onchange="location = this.value;">
      <option value="https://cv.antoniosaborido.es/en/">EN</option>
      <option value="https://cv.antoniosaborido.es/es/">ES</option>
    </select>
    <ThemeControl />
  </nav>
</header>

<script>
  // Cambiar el color de fondo de las opciones del menú desplegable cuando se hace clic en él
  const langElement = document.getElementById('lang');
  if (langElement) {
    langElement.addEventListener('click', function() {
      this.style.backgroundColor = 'black';
    });
  }
</script>